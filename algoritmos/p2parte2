#include <stdio.h>
#include <stdlib.h>
#define ex3

#ifdef ex1
#include <stdio.h>
#include <stdlib.h>

int A[10];

void mediaDosPares(){
	int i, count = 0;
	float sm = 0;
	int modulo;
	for(i=0;i<10;i++){
		modulo = A[i]%2;
		//printf("\nsequencia %d \n",i+1);
		//printf("numero %d \n",A[i]);
        //printf("modulo %d \n\n",modulo);

		if(modulo==0){
			count++;
			sm = sm+A[i];
			//printf("Numero par");
		}
	}

	if(count==0){
		printf("\nNenhum numero par foi digitado");
	}else{
		printf("\n Foram digitados %d numeros pares", count);
		sm = sm/count;
		printf("\n E a media de numeros pares digitados e %.1f\n\n", sm);
	}
}

void main(){
	int j=0;
	printf("\n====== Digite 10 numeros ======= \n");
	for(j=0;j<10;j++){
		printf("\n%do numero: ", j+1);
		scanf("%d", &A[j]);
	}

	mediaDosPares();
}
#endif
